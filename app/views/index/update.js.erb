item = $('#<%= @need[:date] %>')
<% if @need[:completed] == 'true' %>
  item.addClass('completed').find('.text').attr('contenteditable', 'false')
  $('#need_text').focus()
<% elsif @need[:completed] == 'false' %>
  item.removeClass('completed').find('.text').attr('contenteditable', 'true')
<% else %>
  item.find('.text').html("<%= @need[:text] %>")
<% end %>