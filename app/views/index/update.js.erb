item = $('#<%= @need[:date] %>')
<% if @need[:completed] == 'true' %>
  item.addClass('completed').unbind('mouseenter mouseleave').css('background-color', '#e9ffe9')
  item.find('.text').css('text-decoration', 'line-through').unbind('click')
  $('#need_text').focus()
<% elsif @need[:completed] == 'false' %>
  item.removeClass('completed').css('background-color', '#f6f6f6').settings()
  item.find('.text').css('text-decoration', 'none')
<% else %>
  item.find('.text').html("<%= @need[:text] %>")
<% end %>